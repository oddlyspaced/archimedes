<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme">
    </style>
    <style name="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="CardView.Dark" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="HelpButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#fecd1d</item>
        <item name="android:layout_gravity">0x11</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="HelpSubtitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_gravity">0x11</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="HelpTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">0x1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_gravity">0x11</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
</resources>

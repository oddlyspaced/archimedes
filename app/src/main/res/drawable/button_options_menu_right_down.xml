<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1px"
    android:insetRight="0dp"
    android:insetTop="0dp"
    android:insetBottom="0dp">
    <shape android:shape="rectangle">
        <corners
            android:topLeftRadius="0dp"
            android:topRightRadius="@dimen/floating_options_menu_corner_radius"
            android:bottomLeftRadius="0dp"
            android:bottomRightRadius="@dimen/floating_options_menu_corner_radius" />
        <solid android:color="#adadad" />
        <padding
            android:left="@dimen/floating_options_menu_horizontal_padding"
            android:top="@dimen/floating_options_menu_vertical_padding"
            android:right="@dimen/floating_options_menu_horizontal_padding"
            android:bottom="@dimen/floating_options_menu_vertical_padding" />
    </shape>
</inset>
